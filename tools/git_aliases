alias Gal='git add --all && git status'
alias Gad='git add'
alias Gco='git commit'
alias Gps='git push'
alias Gpl='git pull'
alias Gck='git checkout'
alias Gbr='git checkout -b'
alias Gst='git status'
alias Grs='git reset --hard'
alias Gmr='git merge'
alias Gac='git add --all && git commit'
alias Gff='git diff'
alias Glo="git log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"
alias Gsl='git shortlog -s -n'
alias Gbl='git ls-files | xargs -n1 git blame --line-porcelain | sed -n "s/^author //p" | sort -f | uniq -ic | sort -nr'